{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@mas/shared": [
        "packages/shared/src/index.ts"
      ],
      "@mas/shared/*": [
        "packages/shared/src/*"
      ]
    }
  }
}

{
  "$schema": "https://raw.githubusercontent.com/nicepkg/vite-plugin-react-inspector/main/schema/tauri.schema.json",
  "productName": "MAS Secure Messenger",
  "identifier": "com.mas.secure",
  "version": "0.1.0",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev --prefix ..",
    "beforeBuildCommand": "npm run build --prefix .."
  },
  "app": {
    "windows": [
      {
        "title": "MAS Secure Messenger",
        "width": 1200,
        "height": 780,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}

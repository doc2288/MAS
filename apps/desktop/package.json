{
  "name": "@mas/desktop",
  "private": true,
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "concurrently -k \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "build": "vite build && electron-builder",
    "typecheck": "tsc -p tsconfig.json --noEmit"
  },
  "dependencies": {
    "@mas/shared": "0.0.1",
    "libphonenumber-js": "^1.12.37",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/node": "^25.3.1",
    "@types/react": "^18.3.28",
    "@types/react-dom": "^18.3.7",
    "@vitejs/plugin-react": "^4.5.2",
    "concurrently": "^9.2.1",
    "electron": "^39.7.0",
    "electron-builder": "^24.13.3",
    "typescript": "^5.8.3",
    "vite": "^7.3.1",
    "wait-on": "^9.0.4"
  },
  "build": {
    "appId": "com.mas.secure",
    "productName": "MAS Secure Messenger",
    "files": [
      "dist/**",
      "electron/**"
    ],
    "directories": {
      "buildResources": "build"
    }
  }
}
